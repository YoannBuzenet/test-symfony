{% extends '/admin/base_admin.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
        
            <div class="col">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">
                                    {{ stats.users }} utilisateurs
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-dark text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-hotel fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.ads }} Annonces postées</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-white bg-warning mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-folder fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.bookings }} réservations</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-white bg-success mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-comments fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.comments }} avis</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <hr>
        <div class="row">
            <div class="col">
                <div class="alert alert-success">
                    <h2 class="alert-heading my-3">
                    <i class="fas fa-arrow-up"></i> The best ads
                    </h2>
                    <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ad</th>
                            <th>Owner</th>
                            <th>Avg</th>
                        </tr>
                        <tbody>
                        {% for ad in best_ads %}
                            <tr>
                                <td>{{ad.title}}</td>
                                <td><img src="{{ad.picture}}" alt="" class="avatar avatar-micro"> {{ ad.firstName }}{{ ad.lastName }}</td>
                                <td><span class="badge badge-dark">{{ad.note | number_format(1, ",", " ")}}</span></td>
                            </tr>
                        {% endfor %}    
                        </tbody>
                    </thead>
                    
                    </table>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-danger">
                    <h2 class="alert-heading my-3">
                    <i class="fas fa-arrow-down"></i> The worst ads
                    </h2>
                    <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Ad</th>
                            <th>Owner</th>
                            <th>Avg</th>
                        </tr>
                        <tbody>
                        {% for ad in worst_ads %}
                            <tr>
                                <td>{{ad.title}}</td>
                                <td><img src="{{ad.picture}}" alt="" class="avatar avatar-micro"> {{ ad.firstName }}{{ ad.lastName }}</td>
                                <td><span class="badge badge-dark">{{ad.note | number_format(1, ",", " ")}}</span></td>
                            </tr>
                        {% endfor %}    
                        </tbody>
                    </thead>
                    
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
