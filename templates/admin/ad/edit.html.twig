{% extends 'admin/base_admin.html.twig' %}

{% block title %}Ad {{ ad.id }}edition{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-3">Ad editing - {{ ad.title }}</h1>

{{ form_start(form) }}
    <div class="row">

        <div class="col">
            <div class="card bg-light">
                <div class="card-header">
                    <h4 class="card-title">Correct the Ad</h4>
                </div>
                <div class="card-body">
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i>
                        Save changes
                    </button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-light">
                <div class="card-header">
                    <h4 class="card-title">Bookings</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Booker</th>
                                <th>Date</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for booking in ad.bookings %}
                            <tr>
                                <td>{{ booking.id }}</td>
                                <td>{{ booking.booker.fullName }}</td>
                                <td>{{ booking.createdAt | date('d/m/Y')}}</td>
                                <td><a href="#" class="btn btn-primary"><i class="fas fa-pen"></i></a></td>
                            </tr>
                        {% endfor %}    
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card bg-light mt-3">
                <div class="card-header">
                    <h4 class="card-title">Comments</h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Author</th>
                                <th>Rating</th>
                                <th>Comment</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for comment in ad.comments %}
                            <tr>
                                <td>{{ comment.id }}</td>
                                <td>{{ comment.author.fullName }}</td>
                                <td>{{ comment.rating }}</td>
                                <td>{{ comment.content }}</td>
                                <td><a href="#" class="btn btn-primary"><i class="fas fa-pen"></i></a></td>
                            </tr>
                        {% endfor %}    
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


{{ form_end(form) }}
</div>

{% endblock %}