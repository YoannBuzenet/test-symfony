{% extends 'base.html.twig' %}

{% block title %}Nos magnifiques annonces{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-3">Les annonces de nos hôtes</h1> 

    <div class="row">
        {% for ad in ads %}
            <div class="col-md-4">
                <div class="card bg-light mb-3">
                    <div class="card-header text-center">
                        <p>{{ad.rooms}} Chambres, <strong>{{ad.price}}&euro;</strong>/nuit</p> <br>
                        <small>Pas encore noté</small>
                        <a href="{{path('ads_show', {'slug' : ad.slug})}}">
                            <img src="{{ad.coverImage}}" alt="Image de l'appartement" style="height : 200px;width : 100%;display : block;" >
                        </a>
                        <div class="card-body">
                            <a href="{{path('ads_show', {'slug' : ad.slug})}}"><h4 class="card-title">{{ad.title}}</h4></a>
                            <p class="card-text">
                            {{ad.introduction}}
                            </p>
                            <a href="{{path('ads_show', {'slug' : ad.slug})}}" class="btn btn-seconday">Visiter</a>
                        </div>

                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>    
{% endblock %}
