{% extends 'base.html.twig' %}

{% block title %}Book the ad {{ ad.title }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Book the ad : {{ad.title }}</h1>
        <p>You're going to book the appart of <strong>{{ ad.author.fullName }}</strong> - tell us your dates, we'll take care of the rest.</p>

        {{ form_start(form)}}

        <div class="alert alert-light">
            <h2>What are the date that interest you ?</h2>
            <div class="row">
                <div class="col">
                    {{ form_row( form.startDate )}}
                </div>
                <div class="col">
                    {{ form_row( form.endDate )}}
                </div>
            </div>
        </div>

        <h4>Amount of the holidays : <span id="amount">...</span> &euro;</h4>
        <span id="days">0</span> nuits Ã  {{ ad.price }}&euro;/nuits

        <h2>Do you have a comment ?</h2>
        {{ form_row(form.comment) }}

        <h2>You're done !</h2>
        <p>Dream holidays ? Work holidays ? Doesn't matter, we're with you !</p>

        <button type="submit" class="btn btn-success">I book !</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
